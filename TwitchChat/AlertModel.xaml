<UserControl x:Class="TwitchChat.AlertModel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TwitchChat"
             mc:Ignorable="d"  IsHitTestVisible="False" Name="Wndw"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml" 
              HorizontalAlignment="Left" VerticalAlignment="Top" >
    <Grid >
        <Grid  IsHitTestVisible="False" Margin="8"   >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="40*"/>
                <ColumnDefinition Width="60*"/>
            </Grid.ColumnDefinitions>
            <TextBlock FontSize="15"  IsHitTestVisible="False" VerticalAlignment="Top" Foreground="White" FontWeight="Bold" Name="Username" Text=""/>
            <TextBlock Grid.Column="1" MaxWidth="200" FontSize="14" IsHitTestVisible="False" TextWrapping="Wrap" Foreground="White" VerticalAlignment="Bottom" Margin="16 0 0 0" Name="Text" Text=""/>
        </Grid>
    </Grid>
</UserControl>
